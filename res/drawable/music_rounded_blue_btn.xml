<?xml version="1.0" encoding="utf-8"?>
<selector
  xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_enabled="true" android:state_pressed="true">
        <shape android:shape="rectangle">
            <solid android:color="@color/music_blue_button_pressed" />
            <corners android:radius="@dimen/music_blue_button_bg_corners" />
        </shape>
    </item>
    <item android:state_enabled="false">
        <shape android:shape="rectangle">
            <solid android:color="@color/music_blue_button_disabled" />
            <corners android:radius="@dimen/music_blue_button_bg_corners" />
        </shape>
    </item>
    <item>
        <shape android:shape="rectangle">
            <solid android:color="@color/music_blue_button_normal" />
            <corners android:radius="@dimen/music_blue_button_bg_corners" />
        </shape>
    </item>
</selector>