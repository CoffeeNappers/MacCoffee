<?xml version="1.0" encoding="utf-8"?>
<selector
  xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_selected="true">
        <shape>
            <solid android:color="@color/music_selectable_bg_selected" />
            <corners android:radius="@dimen/music_selectable_bg_corners" />
        </shape>
    </item>
    <item android:state_pressed="true">
        <shape>
            <solid android:color="@color/music_selectable_bg_pressed" />
            <corners android:radius="@dimen/music_selectable_bg_corners" />
        </shape>
    </item>
    <item>
        <shape>
            <solid android:color="@color/music_selectable_bg_normal" />
            <corners android:radius="@dimen/music_selectable_bg_corners" />
        </shape>
    </item>
</selector>