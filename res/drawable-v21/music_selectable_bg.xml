<?xml version="1.0" encoding="utf-8"?>
<ripple android:color="@color/music_selectable_bg_pressed"
  xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:id="@android:id/mask">
        <shape>
            <solid android:color="#ff000000" />
            <corners android:radius="@dimen/music_selectable_bg_corners" />
        </shape>
    </item>
    <item>
        <selector>
            <item android:state_selected="true">
                <shape>
                    <solid android:color="@color/music_selectable_bg_selected" />
                    <corners android:radius="@dimen/music_selectable_bg_corners" />
                </shape>
            </item>
            <item>
                <shape>
                    <solid android:color="@color/music_selectable_bg_normal" />
                    <corners android:radius="@dimen/music_selectable_bg_corners" />
                </shape>
            </item>
        </selector>
    </item>
</ripple>